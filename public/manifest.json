{
    "name": "OGame Tracker[name-suffix]",
    "version": "[major-version].[minor-version].[revision-version].[patch-version]",
    "description": "OGame Tracker[name-suffix]",
    "manifest_version": 2,
    "icons": {
        "128": "icon128.png"
    },
    "permissions": [
        "storage",
        "unlimitedStorage"
    ],
    "web_accessible_resources": [
        "icons/*",
        "img/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.ogame.gameforge.com/game/*"
            ],
            "css": [
                "app.css"
            ],
            "js": [
                "attach.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://*.ogame.gameforge.com/game/*"
            ],
            "js": [
                "chunk-vendors.js",
                "app.js"
            ],
            "run_at": "document_end"
        }
    ]
}